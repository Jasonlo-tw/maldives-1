<h1>Listing reports</h1>

<table>
  <thead>
    <tr>
      <th>Meeting</th>
      <th>Name</th>
      <th>Module</th>
      <th>This week work</th>
      <th>Need help</th>
      <th>Next week work</th>
      <th>Share tech</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.meeting_id %></td>
        <td><%= report.name %></td>
        <td><%= report.module %></td>
        <td><%= report.this_week_work %></td>
        <td><%= report.need_help %></td>
        <td><%= report.next_week_work %></td>
        <td><%= report.share_tech %></td>
        <td><%= link_to '細項', report %></td>
        <td><%= link_to '編輯', edit_report_path(report) %></td>
        <td><%= link_to '刪除', report, method: :delete, data: { confirm: '確認刪除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

