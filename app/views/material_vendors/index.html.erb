<h2>廠商簡稱列表</h2>

<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("新增廠商簡稱", new_material_vendor_path, :class => "btn btn-primary btn-sm") %>
</div>
<table class="table table-striped">
	<thead>
		<tr>
			<th>廠商編號</th>
			<th>廠商簡稱</th>
			<th>ID</th>
		</tr>
	</thead>
	<tbody>		
		<% @material_vendors.each do |material_vendor| %>
		<tr>
			<td><%= material_vendor.sno %></td>
			<td><%= material_vendor.name %></td>
			<td><%= material_vendor.sid %></td>			
			<td>
				<%= link_to("[修改]" , edit_material_vendor_path(material_vendor)) %>
				<%= link_to("[刪除]" , material_vendor_path(material_vendor) , method: :delete ) %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>


